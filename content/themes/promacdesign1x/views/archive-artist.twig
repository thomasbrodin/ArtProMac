{% extends "base.twig" %}

{% block content %}

	<section id="artists" class="main">
		<div class="container">

			<div class="row border">
				<div class="col-md-6">
					<h2>{{ function( 'pll_e', 'Artistes' )}}</h2>
				</div>
				<div class="col-md-6">
					<ul id="filter-section" class="filter">
						<li><a href="#liste">{{ function( 'pll_e','Liste')}}</a></li>
						<li><a href="#vignettes">{{ function( 'pll_e','Vignettes')}}</a></li>
					</ul>
				</div>
			</div>

			<section id="vignettes" class="filtering thumbnails">

					{% for term in artist_category %}
									<div class="row">

										{% if term.get_posts is not empty %}
											<h3>{{term.name}}</h3>
											{% endif %}

										{% for post in term.get_posts({'orderby' : 'menu_order'}) %}
											<article class="col-md-3 col-sm-6">
												<figure class="c4">
													<a href="{{post.link}}">
														{% if post.thumbnail %}
															<img src="{{post.get_thumbnail.get_src|resize(480,320, center)}}" />
														{% else %}
															<img src="http://placehold.it/300&text=Image+Needed">
														{% endif %}
													</a>
												</figure>
												<div class="meta">
													<h4><a href="{{post.link}}">
															{{post.title}}
															</a>
														</h4>
													</div>
												</article>
											{% endfor %}

						</div>
					{% endfor %}

			</section>

			<section class="filtering" id="liste">
				<div class="row">
					<div class="artists-list">
						<ul>
							{% for post in posts %}
								<li>
									<a data-thumb="{{post.get_thumbnail.get_src|resize(600)}}" href="{{post.link}}">{{post.title}}</a>
								</li>
							{% endfor %}
						</ul>
					</div>
					<div class="artists-thumb">
						<img src="{{posts[0].get_thumbnail.get_src|resize(600)}}">
					</div>
				</div>
			</section>
		</div>
	</section>

{% endblock %}
