{% extends "base.twig" %}

{% block content %}

	<section class="main">
		<div class="container">
			<div class="row border">
				<div class="col-md-12">
					<h2>{{ function( 'pll_e','Resultats de recherche pour ','Global')}} {{search_title}}</h1>
				</div>
			</div>
			{% if posts %}
				{% for post in posts %}
					<div class="row border">
						{% if post.get_thumbnail %}
							<div class="col-md-4">
								<a href="{{post.link}}">
									<img src="{{post.thumbnail.get_src|resize(500)}}" />
								</a>
							</div>
						{% endif %}
						<div class="{% if post.get_thumbnail %}col-md-8{% else %}col-md-12{% endif %}">
							<a href="{{post.link}}">
								<article>
									<h2>{{post.title}}</a></h2>
									<p>{{post.content}}</p>
									<span class="hr"></span>
								</article>
							</a>
						</div>
					</div>
				{% endfor %}
			{% else %}
			<p>{{ function( 'pll_e','Désolé, nous n’avons rien trouvé')}}</p>
			{% endif %}

		</div>
	</section>

{% endblock %}
