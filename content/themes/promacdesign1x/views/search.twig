{% extends "base.twig" %}

{% block content %}

	<section class="main">
		<div class="container">
			<h1>{{ function( 'pll_e','Resultats de recherche pour ','Global')}} {{search_title}}</h1>
			{% if posts %}
				{% for post in posts %}
					<div class="row">
						{% if post.get_thumbnail %}
							<div class="col-md-4">
								<img src="{{post.thumbnail.get_src|resize(500)}}" />
							</div>
						{% endif %}
						<div class="{% if post.get_thumbnail %}col-md-8{% else %}col-md-12{% endif %}">
							<article>
								<h2>{{post.title}}</a></h2>
								<p>{{post.content}}</p>
								<span class="hr"></span>
							</article>
						</div>
					</div>
				{% endfor %}
			{% else %}
			<p>{{ function( 'pll_e','Désolé, nous n’avons rien trouvé')}}</p>
			{% endif %}

		</div>
	</section>

{% endblock %}
